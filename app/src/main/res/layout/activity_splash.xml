        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/c_imgViewLogo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginStart="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
